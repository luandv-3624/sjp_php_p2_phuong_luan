{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "composer install --no-dev --optimize-autoloader",
    "ignoreCommand": "true",
    "functions": {
        "api/lambda.php": {
            "runtime": "vercel-php@0.7.4"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/lambda.php"
        }
    ]
}